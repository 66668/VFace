<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/common_bg"
    android:layout_height="match_parent">

    <include layout="@layout/common_top_bar_layout_with_backbtn" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#fafafa"
        android:paddingTop="22dp"
        android:paddingLeft="27dp"
        android:paddingRight="27dp"
        android:paddingBottom="20dp">


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/user_name_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="客户姓名："
                android:textColor="#999999"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/user_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/expenseType_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费类型："
                android:textColor="#999999"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/expenseType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/serial_number_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电子票号："
                android:textColor="#999999"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/serial_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_marginTop="6dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/money_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="金&#160;&#160;&#160;&#160;额："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff2727"
                android:textSize="16sp" />
        </LinearLayout>


        <!--<TextView-->
        <!--android:id="@+id/shop_tips"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="商&#160;&#160;&#160;家："-->
        <!--android:layout_marginTop="13dp"-->
        <!--android:textColor="#999999"-->
        <!--android:textSize="16sp"-->
        <!--android:layout_below="@+id/money_tips"-->
        <!--android:layout_alignLeft="@+id/money_tips"-->
        <!--android:layout_alignRight="@+id/money_tips" />-->

        <!--<TextView-->
        <!--android:id="@+id/shop_name"-->
        <!--android:layout_width="wrap_content"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:textColor="#666666"-->
        <!--android:textSize="16sp"-->
        <!--android:layout_alignBaseline="@+id/shop_tips"-->
        <!--android:layout_toRightOf="@+id/shop_tips" />-->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/time_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="消费时间："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/operator_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="操&#160;作&#160;员："
                android:textColor="#999999"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/operator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#666666"
                android:textSize="16sp" />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d6d6d6" />

    <LinearLayout
        android:id="@+id/list_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f3f3f3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="品名"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/counts"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="数量"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center" />

        <TextView
            android:id="@+id/price"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="单价"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="总价"
            android:textColor="#999999"
            android:textSize="16sp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:gravity="center" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#d6d6d6" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:cacheColorHint="@android:color/transparent"
        android:divider="#d6d6d6"
        android:dividerHeight="1px"
        android:background="#f3f3f3" />

</LinearLayout>