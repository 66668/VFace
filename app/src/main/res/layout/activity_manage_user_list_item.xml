<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fefdfc"
    android:gravity="center_vertical"
    android:layout_height="wrap_content">

    <com.vface.widget.CircleImageView
        android:id="@+id/imgUserHeader"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/photo" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/text_name_tips"
            android:text="姓名："
            android:textSize="14sp"
            android:textColor="#d8d8d8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_toRightOf="@+id/text_name_tips" />

        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text_surplus_points_tips"
            android:text="积分："
            android:textSize="14sp"
            android:textColor="#d8d8d8"
            android:layout_below="@+id/text_name_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_surplus_points"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:singleLine="true"
            android:layout_toRightOf="@+id/text_surplus_points_tips"
            android:layout_alignBaseline="@+id/text_surplus_points_tips" />


        <TextView
            android:layout_marginTop="5dp"
            android:id="@+id/text_phone_tips"
            android:text="手机号码："
            android:textSize="14sp"
            android:textColor="#d8d8d8"
            android:layout_below="@+id/text_surplus_points_tips"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/text_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_toRightOf="@+id/text_phone_tips"
            android:layout_alignBaseline="@+id/text_phone_tips" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/right"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="17dp" />

    </RelativeLayout>


</LinearLayout>