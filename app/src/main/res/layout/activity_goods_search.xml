<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@drawable/common_bg"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@color/background"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/imgBack"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="商品查询"
            android:textColor="#FFF"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imgUserHeader"
            android:layout_width="58dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:adjustViewBounds="true"
            android:src="@drawable/login_logo" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_input_bg"
        android:padding="1dp"
        android:focusableInTouchMode="true"
        android:layout_margin="13dp">

        <ImageView
            android:id="@+id/search_icon"
            android:layout_width="25dp"
            android:layout_margin="7dp"
            android:layout_height="25dp"
            android:layout_centerVertical="true"
            android:src="@drawable/icon_search_user" />

        <EditText
            android:id="@+id/searchKeyEdit"
            android:layout_toRightOf="@+id/search_icon"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:background="#FFF"
            android:ems="10"
            android:hint="@string/please_input_goods_name_or_num"
            android:padding="5dp"
            android:paddingLeft="11dp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:textColor="#4c4c4c"
            android:textColorHint="#d8d8d8"
            android:imeOptions="actionSearch"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/btn_clear_edit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/clear_edit_btn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="7dp"
            android:padding="7.5dp"
            />


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:background="#dddce0"
        android:layout_height="1px" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#999999"
            android:text="品名"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#999999"
            android:text="编码"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#999999"
            android:text="单价(元)"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="16sp"
            android:textColor="#999999"
            android:text="库存"
            android:gravity="center"
            android:paddingTop="11dp"
            android:paddingBottom="11dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:background="#dddce0"
        android:layout_height="1px" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="#d6d6d6"
        android:dividerHeight="1px"
        android:cacheColorHint="@android:color/transparent" />

</LinearLayout>